@model PagedList.IPagedList<CellPhoneConnection.LoaiSanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutForAdmin.cshtml";
}

<div id="page-wrapper" style="min-height: 444px;">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quan ly Loai san pham</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <button>
                        <a href="@Url.Action("Create","QuanLyLSP")">Them moi!</a>
                    </button>
                </div>
                <div class="panel-heading">
                    Danh muc:
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                    <thead>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>ID</td>
                                            <td>Ten loai san pham</td>
                                            <td>Tinh trang</td>
                                        </tr>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="gradeA odd" role="row">
                                                <td>@item.a_IDLoaiSP</td>
                                                <td>@item.a_TenLoaiSP</td>
                                                <td>@item.a_TinhTrang</td>
                                                <td>
                                                    <button>
                                                        <a href="@Url.Action("Edit", "QuanLyLSP", new { id = @item.a_IDLoaiSP })">Edit</a>
                                                    </button>
                                                </td>
                                                <td>
                                                    <button><a href="@Url.Action("Deny", "QuanLyLSP", new { id = @item.a_IDLoaiSP })">Deny</a></button>                                                
                                                </td>
                                                <td>
                                                    <button><a href="@Url.Action("Allow", "QuanLyLSP", new { id = @item.a_IDLoaiSP })">Allow</a></button>
                                                </td>
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                    </div>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <!-- /.row -->
</div>

